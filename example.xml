    <ship guid="10000" name="Constitution Class" mnemonic="CCA" crew="430">
	    <hull id="11000" name="primary" facing="FAB">
	        <section id="11100" name="forward" facing="A" capacity="200">
                <component type="CargoBay" order="5"/>
