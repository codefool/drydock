                <neighbors>1100,1300,1400</neighbors>
	        </section>
            <section id="1200" name="starboard" facing="BC" capacity="200">
                <weapon type="PhaserI" order="0"/> 
                <weapon type="PhaserI" order="0"/> 
                <weapon type="PhaserII" order="1"/> 
                <weapon type="PhaserII" order="1"/> 
                <weapon type="PhaserIII" order="2"/> 
                <weapon type="PhaserIII" order="2"/> 
                <weapon type="PhaserIV" order="3"/> 
