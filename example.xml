                <component type="PhaserII" order="1"/> 
                <component type="PhaserIII" order="2"/> 
                <component type="PhaserIII" order="2"/> 
                <component type="PhaserIV" order="3"/> 
                <component type="PhaserIV" order="3"/> 
                <component type="PhaserV" order="4"/> 
                <neighbors>1100,1200,1400,2000</neighbors>
            </section>
            <section id="1400" name="port" facing="EF" capacity="200">
                <component type="PhaserI" order="0"/> 
                <component type="PhaserI" order="0"/> 
                <component type="PhaserII" order="1"/> 
                <component type="PhaserII" order="1"/> 
                <component type="PhaserIII" order="2"/> 
                <component type="PhaserIII" order="2"/> 
                <component type="PhaserIV" order="3"/> 
                <component type="PhaserIV" order="3"/> 
                <component type="PhaserV" order="4"/> 
                <neighbors>1100,1200,1400,2000</neighbors>
            </section>
            <section id="1500" name="core" facing="ABCDEF" capacity="200">
                <component id="1401" type="sickbay" order="0"/>
                <component id="1402" type="bridge" order="0"/>
                <component id="1403" type="aux-bridge" order="0"/>
            </section>
	    </hull>
	    <hull id="12000" name="secondary" facing="CDE">
	       <section id="2100" name="portNacelle" facing="DE" capacity="100">
	           <component id="2101" type="WarpNacelle" order="0"/>
	           <component id="2102" type="WarpStrut" order="1"/>
	           <component id="2103" type="PlasmaConduit" order="2"/>
	       </section>
           <section id="2200" name="starboardNacelle" facing="CD" capacity="100">
               <component id="2201" type="WarpNacelle" order="0"/>
               <component id="2202" type="WarpStrut" order="1"/>
               <component id="2203" type="PlasmaConduit" order="2"/>
           </section>
           <section id="2300" name="mainEngineering" facing="D" capacity="50">
                <component id="2301" type="WarpCore" order="0"/>
           </section>
           <section id="2400" name="shuttleBay" facing="D" capacity="10">
                <component id="2401" type="cargoBay" order="0"/>
           </section>
	    </hull>
	    <!--  
	    the following defines a system consisting of the two warp nacelles and the warp core.
	    The efficacy of this system is the average of the efficacies of all the components in
	    the system. 
	    -->
        <system id="8000" name="WarpDrive">
            <componentRef id="2100" weight="40"/>
            <componentRef id="2200" weight="40"/>
            <componentRef id="2301" weight="30"/>
        </system>
        <system id="8010" name="PhaserI">
            <componentRef id="1101" weight="30"/>
            <componentRef id="8201" weight="30"/>
            <componentRef id="8202" weight="40"/>
        </system>
        <system id="8020" name="WaveMotionGun">
            <componentRef id="3201" weight="40"/>
            <componentRef id="2201" weight="10"/>
            <componentRef id="3201" weight="50"/>
        </system>
        <systemRef id="8040" sysName="Phaser I" c1="2202" c2="1023" c3="1400"/>
        <systemRef id="8030" sysName="Wave-Motion Gun" c1="3201" c2="2201" c3="3201"/>
    </ship>
    <component guid="10200" name="Fusion Reactor 1" mnemonic="FR1" size="2">
