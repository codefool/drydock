<?xml version="1.0" encoding="UTF-8"?>
<xs:schema targetNamespace="http://codefool.org/schemas/drydock/" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://codefool.org/schemas/drydock/">
    <xs:complexType name="ShipDefinition">
        <xs:sequence>
            <xs:element name="name" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="ShipDefinitionList">
        <xs:sequence>
            <xs:element name="ship" type="ShipDefinition" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="BaseSystem">
        <xs:sequence>
            <xs:element name="name" type="xs:string"/>
            <xs:element name="size" type="xs:int"/>
            <xs:element name="repairRate" type="xs:int"/>
            <xs:element name="maxDamage" type="xs:int"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>